<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editNomeProduto"
        android:hint="Nome do produto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editCategoria"
        android:hint="Nome da categoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/quantidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Digite a quantidade"
        android:inputType="numberDecimal"
        android:visibility="visible"/>

    <EditText
        android:id="@+id/unitario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Digite o valor"
        android:inputType="numberDecimal"
        android:visibility="visible"/>

    <Button
    android:onClick="salvarProduto"
    android:id="@+id/verificar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Sua categoria"/>

    <ListView
        android:id="@+id/listaProdutos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>